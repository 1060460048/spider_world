{
  "spider": "shino",
  "website": "站酷网",
  "type": "设计",
  "index": "https://www.zcool.com.cn/",
  "settings": {
    "USER_AGENT": "Mozilla/5.0 (Macintosh; Intel Mac OS X 10_12_6) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/60.0.3112.90 Safari/537.36"
  },
  "start_urls": {
    "type": "static",
    "value": ["https://www.zcool.com.cn/"]
  },
  "allowed_domains": [
    "zcool.com.cn"
  ],
  "rules": "zcool",
  "item": {
    "class": "ZcoolItem",
    "loader": "ZcoolInfoLoader",
    "attrs": {
      "designer": [
        {
          "method": "xpath",
          "args": [
            "//p[@class='people-nick-name']/text()"
          ]
        }
      ],
      "hot": [
        {
          "method": "xpath",
          "args": [
            "//a[@z-st='userHome_top_num_viewcount']/text()"
          ]
        }
      ],
      "score": [
        {
          "method": "xpath",
          "args": [
            "//a[@z-st='userHome_top_num_score']/text()"
          ]
        }
      ],
      "fans": [
        {
          "method": "xpath",
          "args": [
            "//a[@z-st='userHome_top_num_following']/text()"
          ]
        }
      ],
      "follow": [
        {
          "method": "xpath",
          "args": [
            "//a[@z-st='userHome_top_num_following']/text()"
          ]
        }
      ]
    }
  }
}